<script>
    function IncluirSuma(elemento) {
        if ($('#datosCuentaSumaOrigen_saldo').val() == "0") {
            alert("La cuenta no posee saldo disponible para transferir.");
        }
        else {
            $('#seleccionadasumaorigen').text('Si');
            $('#seleccionadasumadestino').text('Si');
            $('#ResumenTransferenciaSuma').val($('#datosCuentaSumaOrigen_saldo').val());
            $('#botonsuma').attr("onclick", "ExcluirSuma(this)");
            $('#botonsuma').html('<a class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove"></span></a>');
        }
}

function ExcluirSuma(elemento) {
    $('#seleccionadasumaorigen').text('No');
    $('#seleccionadasumadestino').text('No');
    $('#ResumenTransferenciaSuma').val("0");
    $('#botonsuma').attr("onclick", "IncluirSuma(this)");
    $('#botonsuma').html('<a class="btn btn-success btn-sm"><span class="glyphicon glyphicon-plus"></span></a>');
}

function IncluirPrepago(elemento) {
    if ($('#datosCuentaPrepagoOrigen_saldo').val() == "0,00") {
        alert("La cuenta no posee saldo disponible para transferir.");
    }
    else {
        $('#seleccionadaprepagoorigen').text('Si');
        $('#seleccionadaprepagodestino').text('Si');
        $('#ResumenTransferenciaPrepago').val($('#datosCuentaPrepagoOrigen_saldo').val());
        $('#botonprepago').attr("onclick", "ExcluirPrepago(this)");
        $('#botonprepago').html('<a class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove"></span></a>');
    }
}

function ExcluirPrepago(elemento) {
    $('#seleccionadaprepagoorigen').text('No');
    $('#seleccionadaprepagodestino').text('No');
    $('#ResumenTransferenciaPrepago').val("0,00");
    $('#botonprepago').attr("onclick", "IncluirPrepago(this)");
    $('#botonprepago').html('<a class="btn btn-success btn-sm"><span class="glyphicon glyphicon-plus"></span></a>');
}

function verificarTransferencia() {
    if ($('#ResumenTransferenciaSuma').val() == "0" && $('#ResumenTransferenciaPrepago').val() == "0,00") {
        alert("Debe selecionar al menos una cuenta para realizar transferencia.");
        return false;
    }
    else{
        return true;
    }
}
