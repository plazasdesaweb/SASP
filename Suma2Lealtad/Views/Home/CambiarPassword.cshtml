@model Suma2Lealtad.Models.ViewModels.Home.CambiarPasswordViewModel

@{
    ViewBag.Title = "CambiarPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-group">

    <div class="panel panel-default">

        <div class="panel-heading clearfix panel-gradient">
            <h3 class="panel-title">Cambio de Contraseña</h3>
        </div>

        <div class="panel-body">

            <div class="editor-label col-md-4 control-label">
                <br />
            </div>
            <div class="editor-field col-md-8">
                <br />
            </div>

            @using (Html.BeginForm("CambiarPassword", "Home", FormMethod.Post))
            {
                <div class="editor-label col-md-4 control-label">
                    @Html.LabelFor(model => model.UserName)
                </div>
                <div class="editor-field col-md-6">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control ", @readonly = true })
                </div>

                <div class="editor-label col-md-4 control-label">
                    @Html.LabelFor(model => model.NewPassword1)
                </div>
                <div class="editor-field col-md-6">
                    @Html.PasswordFor(model => model.NewPassword1, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NewPassword1, null, new { @class = "text-danger" })
                </div>

                <div class="editor-label col-md-4 control-label">
                    @Html.LabelFor(model => model.NewPassword2)
                </div>
                <div class="editor-field col-md-6">
                    @Html.PasswordFor(model => model.NewPassword2, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NewPassword2, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="col-md-12 col-btn">
                        <div class="pull-right">
                            <input type="submit" class="btn btn-success btn-lg" value="Procesar" />
                        </div>
                    </div>
                </div>
            }
        </div>
        <!--// panel-body -->

    </div>
    <!--// panel -->

</div>
<!--// columns -->

