@model Suma2Lealtad.Models.User

@{
    ViewBag.Title = "CambiarPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-group">

    <div class="panel panel-default">

        <div class="panel-heading clearfix panel-gradient">
            <h3 class="panel-title">Cambio de Contraseña</h3>
        </div>

        <div class="panel-body">

            <div class="editor-label col-md-4 control-label">
                <br />
            </div>
            <div class="editor-field col-md-8">
                <br />
            </div>

            <form action="@Url.Action("CambiarPassword", "Home")" name="form" method="post" onsubmit="return validarPassword();">


                <div class="editor-label col-md-4 control-label"></div>
                <div class="editor-field col-md-8">
                    <br />
                </div>

                @Html.HiddenFor(model => model.login)

                <div class="editor-label col-md-4 control-label">
                    Contraseña:
                </div>

                <div class="editor-field col-md-8">                    
                    <input type="password" id="password" name="password" value="" maxlength="11" placeholder="Password" class="form-control" required>
                    <span id="field1"></span>
                </div>

                <div class="editor-label col-md-4 control-label">
                    Confirmar Contraseña:
                </div>
                <div class="editor-field col-md-8">
                    <input type="password" id="password2" name="password2" value="" maxlength="11" placeholder="Password" class="form-control" required>
                    <span id="field2"></span>
                </div>
                
                <div class="form-group">
                    <div class="col-md-12 col-btn">
                        <div class="pull-right">
                            <input type="submit" class="btn btn-success btn-lg" value="Buscar" />
                        </div>
                    </div>
                </div>

            </form>

        </div>
        <!--// panel-body -->

    </div>
    <!--// panel -->

</div>
<!--// columns -->

<script>
    function validarPassword() {
        var passsword = $('#password').val();
        var passsword2 = $('#password2').val();
        if (passsword != passsword2) {
            alert("no coincide");
            return false;
        }
        else {
            return true;
        }
    }
</script>

