<script>
    $("#Continuar").click(function () {
        var href = '@Url.Content("~/{controller}/{action}/{params}")'
        href = href.replace("{controller}", "@Model.ControllerName");
        href = href.replace("{action}", "@Model.ActionName");
        href = href.replace("{params}", "@Model.RouteValues");
        window.location.href = href;
    });
</script>
