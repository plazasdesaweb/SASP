@model Suma2Lealtad.Models.ViewModel
@{
    ViewBag.Title = "GenericView";
}
<div class="jumbotron">
    <div class="container">
        <h3><b>@Model.Title</b></h3>
        <p>@Model.Message</p>
    </div>
</div>

<div class="form-group">
    <div class="col-md-12 col-btn">
        <div class="pull-right">
            <a id="Continuar" class="btn btn-success btn-md" role="button">Continuar</a>
        </div>
    </div>
</div>

